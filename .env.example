# HPC Portal Environment Configuration
# Copy this file to .env and update the values

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_USER=hpcportal
POSTGRES_PASSWORD=hpcportal123
POSTGRES_DB=hpcportal

# ==========================================
# Backend Configuration
# ==========================================
# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-to-a-random-string
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-to-a-random-string

# Frontend URL for CORS
FRONTEND_URL=http://localhost:80

# ==========================================
# Slurm Configuration
# ==========================================
# Mode: 'local' (run on login node) or 'ssh' (connect via SSH)
SLURM_MODE=local

# SSH Configuration (only needed if SLURM_MODE=ssh)
SLURM_SSH_HOST=login-node.example.com
SLURM_SSH_PORT=22
SLURM_SSH_USER=hpc-user
SLURM_SSH_KEY_PATH=/app/ssh_keys/id_rsa
SLURM_SSH_PASSWORD=

# ==========================================
# Workspace Configuration
# ==========================================
# Path to shared filesystem where job data is stored
WORKSPACE_ROOT=/shared/hpc-portal

# ==========================================
# Frontend Configuration
# ==========================================
VITE_API_URL=http://localhost:3000/api
