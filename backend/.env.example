# Backend Environment Configuration Example
# Copy this file to .env and customize for your deployment

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Frontend URL for CORS (can be comma-separated for multiple origins)
# Example: http://your-frontend-ip,http://another-frontend-domain.com
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://hpcportal:hpcportal123@postgres:5432/hpcportal?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Slurm Configuration
SLURM_MODE=local
SLURM_SSH_HOST=
SLURM_SSH_PORT=22
SLURM_SSH_USER=
SLURM_SSH_KEY_PATH=

# Workspace Configuration
WORKSPACE_ROOT=/shared/hpc-portal

# PostgreSQL Configuration (for docker-compose)
POSTGRES_USER=hpcportal
POSTGRES_PASSWORD=hpcportal123
POSTGRES_DB=hpcportal
